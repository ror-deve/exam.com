<div class="tab-pane fade show active profile-overview" id="profile-overview">
  <h5 class="card-title mb-3">Profile Details</h5>
  <div class="row ">
    <div class="col-lg-3 col-md-4 label">Name</div>
    <div class="col-lg-9 col-md-8"><%= current_student ? @student.name : @teacher.name %></div>
  </div>

  <div class="row">
    <div class="col-lg-3 col-md-4 label">Email</div>
    <div class="col-lg-9 col-md-8" ><%= current_student ? @student.email : @teacher.email %></div>
  </div>

  <div class="row">
    <div class="col-lg-3 col-md-4 label">Phone</div>
    <div class="col-lg-9 col-md-8"><%= current_student ? @student.phone : @teacher.phone %></div>
  </div>

  <div class="row">
    <% if current_student %>
      <div class="col-lg-3 col-md-4 label">Address</div>
      <div class="col-lg-9 col-md-8"><%= @student.address %></div>
    <% end %>
   </div>
</div>
