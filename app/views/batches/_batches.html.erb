<% @batches.each do |batch| %>
  <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
    <div class="card rounded border-0">
      <div class="card-body p-3">
        <h4><i class="bi bi-people-fill me-3 text-theme" style="font-size: 2rem;"></i></h4>
        <h5><%= batch.name %></h5>
        <div class="batch-info">
          <p class="small text-muted mb-2">Name:
            <span class="text-theme"><%= batch.name %></span>
          </p>
          <p class="small text-muted mb-2">Students:
            <span class="text-theme"><%= link_to batch.students.count, batch_students_path(batch) %></span>
          </p>
          <p class="small text-muted mb-2">Exams:
            <span class="text-theme"><%= batch.exams.count %></span>
          </p>
          <p class="small text-muted mb-2">Institute:
            <span class="text-theme"><%= batch.account.name %></span>
          </p>
          <p class="small text-muted mb-2">Started:
            <span class="text-theme"><%= time_ago_in_words(batch.created_at) + ' ago' %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
