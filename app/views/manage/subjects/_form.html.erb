<div class="modal fade" id="subject-model" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title"><%= action_name == 'new' ? 'New Subject' : 'Edit Subject'%></h6>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_for @subject, url: @subject.new_record? ? manage_account_subjects_path(@current_account) : manage_account_subject_path(@current_account, @subject), local: false, remote: true, html: { novalidate: true, class: "g-3 needs-validation" } do |form| %>
        <div class="modal-body">
          <div class="modalIllustration">
            <%= image_tag (action_name == 'new' ? 'add-folder.png' : 'edit-folder.png'), class: "modalIllustrationImg"%>
          </div>
          <div class="col-12 has-validation">
            <%= form.label :name, "Subject Name:", class: "form-label", for: "subject_name" %>
            <%= form.text_field :name, placeholder: "Enter subject name", class: "form-control", required: true %>
            <div class="invalid-feedback">Please enter subject name.</div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
            <%= form.submit "Submit", class: "btn btn-theme btn-sm" %>
          </div>
        </div>
      <% end %>  
    </div>
  </div>
</div>
