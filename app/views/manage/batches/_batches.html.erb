<% batches.each do |batch| %>
  <div id="batch_<%= batch.id %>" class="col-lg-3 col-md-6 mb-4 mb-lg-0">
    <div class="card rounded border-0">
      <div class="card-body p-3">
        <div class="float-end text-theme">
          <%= link_to edit_manage_account_batch_path(@current_account, batch), method: :GET, remote: true, class: "btn btn-sm btn-theme" do %>
            <i class="bi bi-pencil" title="Edit"></i>
          <% end %>
          <%= link_to "javascript:void(0);", class:"btn btn-sm btn-danger delete batchDelete", data: { bs_toggle: "modal", bs_target: "#DeleteConfirmation", account_id: current_account.id, batch_id: batch.id } do %>
            <i class="bi bi-trash" title="Delete"></i>
          <% end %>
        </div>
        <h4><i class="bi bi-people-fill me-3 text-theme" style="font-size: 2rem;"></i></h4>
        <h5><%= batch.name %></h5>
        <div class="batch-info">
          <p class="small text-muted mb-2">Account:
            <span class="text-theme"><%= batch.account.name %></span>
          </p>
          <p class="small text-muted mb-2">Exams:
            <span class="text-theme"><%= batch.exams.count %></span>
          </p>
          <p class="small text-muted mb-0">Students:
            <span class="text-theme"><%= link_to batch.students.count, manage_account_batch_students_path(@current_account, batch) %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- Batche Pagination-->
<% if @batches&.any? %>
  <%= render partial: 'shared/pagination', locals: { data: @batches, controller_name: 'manage/batches' } %>
<% end %> 