<div class="modal fade" id="batch-model" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title">New Batch</h6>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_for batch, url: batch.new_record? ? manage_account_batches_path(current_account) : manage_account_batch_path(current_account, batch), local: false, remote: true, html: { novalidate: true, class: "g-3 needs-validation" } do |form| %>
        <div class="modal-body">
          <div class="modalIllustration">
            <%= image_tag 'add-folder.png', class: "modalIllustrationImg"%>
          </div>
          <div class="col-12 has-validation">
            <%= form.label :name, "Batch Name:", class: "form-label", for: "batch_name" %>
            <%= form.text_field :name, placeholder: "Enter batch name", class: "form-control", required: true %>
            <div class="invalid-feedback">Please enter batch name.</div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
            <%= form.submit "Submit", class: "btn btn-theme btn-sm" %>
          </div>
        </div>
      <% end %>  
    </div>
  </div>
</div>
