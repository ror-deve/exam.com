<!-- Import Modal -->
<div class="modal fade" id="ImportConfirmation" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title importConfirmation">Import CSV</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: import_manage_account_batch_students_path(@current_account, @batch, @student), remote: true, local: true, method: :post, multipart: true, id: "import-form" do |form| %>
        <div class="modal-body">
          <div class="input-group mb-3">
            <%= form.file_field :file, accept: ".csv", class: "form-control", id: "file-input" %>
          </div>
        </div>
        <div class="modal-footer d-flex justify-content-between">
          <%= link_to "Sample CSV", download_sample_manage_account_batch_students_path(format: :xls), method: :get, class: "btn btn-theme btn-sm" %>
          <div>
            <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-theme btn-sm" id="ImportConfirmationLink">Confirm</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
