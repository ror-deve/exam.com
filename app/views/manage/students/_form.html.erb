<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading"><%= action_name.humanize %> Student</div>
    <div class="panel-body row">
      <div class="col-md-10 col-md-offset-1">
        <%= simple_form_for [:manage, @current_account, @batch, @student] do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :phone %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
