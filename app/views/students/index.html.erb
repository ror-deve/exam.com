<div class="pagetitle">
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item "><%= link_to 'Batches', batches_path %></li>
      <li class="breadcrumb-item active"><%= link_to 'Students', batch_students_path %></li>
    </ol>
  </nav>
</div>
<hr>
<div class="row">
  <div class="col-lg-12">
    <span class="entity-title"><%= @batch.name %> - Students</span>
  </div>
</div>
<br>
<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <% @students.each do |student| %>
        <div class="col-md-3 mb-3">
          <div class="card custom-exam-card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <%= link_to student.name, batch_students_path %>
            </div>
            <div class="card-body">
              <ul class="list-group">
                <li class="list-group-item">
                  <div class="d-flex justify-content-between">
                    <span class="small-font">Email</span>
                    <span class="small-font"><%= student.email %></span>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="d-flex justify-content-between">
                    <span class="small-font">Phone</span>
                    <span class="small-font"><%= student.phone[-4..-1].to_s %></span>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
