<div class="row">
  <% @accounts.each do |account| %>
    <div class="col-md-3 mb-3">
      <div class="card custom-exam-card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h6><%= account.name %></h6>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Name:</span>
                <span class="small-font"><%= account.name %></span>
              </div>
            </li>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Phone:</span>
                <span class="small-font"><%= account.phone %></span>
              </div>
            </li>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Exams:</span>
                <span class="small-font"><%= account.exams.count %></span>
              </div>
            </li>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Batches:</span>
                <span class="small-font"><%= account.batches.count %></span>
              </div>
            </li>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Students:</span>
                <span class="small-font"><%= account.students.count %></span>
              </div>
            </li>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Teachers:</span>
                <span class="small-font"><%= account.teachers.count %></span>
              </div>
            </li>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Email:</span>
                <span class="small-font"><%= account.email %></span>
              </div>
            </li>
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <span class="small-font">Age:</span>
                <span class="small-font"><%= distance_of_time_in_words_to_now(account.created_at) %></span>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>
