<% model_class = Exam %>
<div class="page-header">
  <h1><%= t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<p>
  <strong><%= model_class.human_attribute_name(:account_id) + ':' %></strong><br>
  <%= @exam.account_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:name) + ':' %></strong><br>
  <%= @exam.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:status) + ':' %></strong><br>
  <%= @exam.status %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:duration) + ':' %></strong><br>
  <%= @exam.duration %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:start_time) + ':' %></strong><br>
  <%= @exam.start_time %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:end_time) + ':' %></strong><br>
  <%= @exam.end_time %>
</p>

<%= link_to t('.back', default: t('helpers.links.back')), manage_account_exams_path(@current_account), class: 'btn btn-default' %>
<%= link_to t('.edit', default: t('helpers.links.edit')), edit_manage_account_exam_path(@current_account, @exam), class: 'btn btn-default' %>
<%= link_to t('.destroy', default: t('helpers.links.destroy')), manage_account_exam_path(@current_account, @exam), method: "delete", data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) }, class: 'btn btn-danger' %>
