<div class="container mt-4">
  <div class="row">
    <!-- Your Result Card -->
    <div class="col-12 col-md-5 mb-4">
      <div class="card shadow-sm h-100">
        <div class="p-2 mb-1 bg-primary text-white rounded-top bg-header">
          <h4 class="mb-0 text-center">Your Result</h4>
        </div>
        <div class="card-body text-center">
          <div class="d-flex flex-column align-items-center">
            <div class="bg-light rounded-circle d-flex flex-column justify-content-center align-items-center" style="width: 10rem; height: 10rem;">
              <p class="display-4 text-primary mb-0"><%= @paper_session.score %></p>
              <p class="text-muted">of <%= @paper.questions.count * @paper.marks_per_question %></p>
            </div>
            <% if @paper_session.percentage > 50.0 %>
              <h2 class="mt-3 text-success">Great <i class="bi bi-hand-thumbs-up"></i></h2>
            <% else %>
              <h2 class="mt-3 text-danger">Poor <i class="bi bi-hand-thumbs-down"></i></h2>
            <% end %>
            <p class="text-muted">
              You have scored <%= @paper_session.percentage %>% of the paper.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Summary Card -->
    <div class="col-6 col-md-5 mb-4">
      <div class="card shadow-sm h-100">
        <div class="p-2 mb-1 bg-secondary text-white rounded-top">
          <h4 class="mb-0 text-center">Summary</h4>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Paper Name:</strong>
              <span><%= @paper.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Start Date:</strong>
              <span><%= @paper_session.started_at.strftime("%d/%m/%Y") %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Start Time:</strong>
              <span><%= @paper_session.started_at.strftime("%H:%M:%S") %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Finished Time:</strong>
              <span><%= @paper_session.finished_at.strftime("%H:%M:%S") %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Time Taken:</strong>
              <span><%= @paper_session.time_taken %> Seconds</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Status:</strong>
              <span class="small-font">
                <% if @paper_session.status == 'complete' %>
                  <%= content_tag(:span, 'Complete', class: 'btn btn-success btn-sm') %>
                <% else %>
                  <%= content_tag(:span, 'Pending', class: 'btn btn-warning btn-sm') %>
                <% end %>
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
