<div class="container mt-2">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm mb-6">
        <div class="p-2 mb-1 bg-primary text-white rounded-top bg-header" >
          <h4 class="mb-0">Pending Papers</h4>
        </div>
        <div class="card-body">
          <table class="table table-bordered table-hover table-striped">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>Test</th>
                <th>Assigned On</th>
                <th>Score Card</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_paper_sessions.each do |paper_session| %>
                <% paper = paper_session.paper %>
                <tr>
                  <td><%= paper_session.paper.id %></td>
                  <td><%= paper.name %></td>
                  <td><%= paper_session.started_at.strftime("%d/%m/%Y") %></td>  
                  <td><%= link_to paper_session.score, score_card_student_exam_paper_path(paper_session.student_id, paper_session.exam_id, paper_session.paper_id) %></td>
                  <td>
                    <% if paper_session.status == 'complete' %>
                      <span class="badge bg-success">Complete</span>
                    <% else %>
                      <%= link_to "Pending Test", start_exam_student_exam_paper_path(current_student, paper_session.paper.exam, paper_session.paper), class: "btn btn-warning btn-sm rounded-top" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
